from astro_pi import AstroPi
import time
import random

ap = AstroPi()

r = random.randint(0,255)
ap.show_letter("M",text_colour=[0, 0, r])
time.sleep(1)

r = random.randint(0,255)
ap.show_letter("O",text_colour=[0, 0, r])
time.sleep(1)

r = random.randint(0,255)
ap.show_letter("O",text_colour=[0, 0, r])
time.sleep(1)

r = random.randint(0,255)
ap.show_letter("N",text_colour=[0, 0, r])
time.sleep(1)
ap.clear()

