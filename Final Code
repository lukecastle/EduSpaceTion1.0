from astro_pi import AstroPi

ap = AstroPi()

ap.set_pixel(0, 2, 0, 0, 255)
ap.set_pixel(1, 3, 255, 0, 0)
ap.set_pixel(4, 2, 255, 0, 0)
ap.set_pixel(7, 7, 0, 0, 255)
ap.set_pixel(3, 6, 255, 0, 0)
ap.set_pixel(5, 5, 0, 0, 255)
ap.set_pixel(0, 7, 255, 0, 0)
ap.set_pixel(2, 5, 0, 0, 255)

import pygame

from pygame.locals import *
from astro_pi import AstroPi

pygame.init()
pygame.display.set_mode((640, 480))

ap = AstroPi()

running = True

x = 0
y = 0
ap.set_pixel(x, y, 255, 255, 255)

while running:
    for event in pygame.event.get():
        if event.type == KEYDOWN:
            ap.set_pixel(x, y, 0, 0, 0) # Black 0,0,0 means OFF

            if event.key == K_DOWN and y < 7:
                y = y + 1
            elif event.key == K_UP and y > 0:
                y = y - 1
            elif event.key == K_RIGHT and x < 7:
                x = x + 1
            elif event.key == K_LEFT and x > 0:
                x = x - 1
        ap.set_pixel(x, y, 255, 255, 255)
        if event.type == QUIT:
            running = False
            print("YOUR ASTRONAUT HAS COLLECTED ALL OF THE MOON ROCKS! 8/8!")
            ap.set_pixel(3, 1, 0, 0, 255)
            ap.set_pixel(4, 1, 0, 0, 255)
            ap.set_pixel(2, 2, 0, 0, 255)
            ap.set_pixel(3, 2, 0, 0, 255)
            ap.set_pixel(4, 2, 0, 0, 255)
            ap.set_pixel(5, 2, 0, 0, 255)
            ap.set_pixel(1, 3, 0, 0, 255)
            ap.set_pixel(1, 3, 0, 0, 255)
            ap.set_pixel(2, 3, 255, 0, 0)
            ap.set_pixel(3, 3, 0, 0, 255)
            ap.set_pixel(4, 3, 0, 0, 255)
            ap.set_pixel(5, 3, 255, 0, 0)
            ap.set_pixel(6, 3, 0, 0, 255)
            ap.set_pixel(1, 4, 0, 0, 255)
            ap.set_pixel(1, 4, 0, 0, 255)
            ap.set_pixel(2, 4, 0, 0, 255)
            ap.set_pixel(3, 4, 0, 0, 255)
